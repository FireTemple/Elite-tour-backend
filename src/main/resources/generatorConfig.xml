<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <!--classPathEntry:数据库的JDBC驱动,换成你自己的驱动位置  -->
    <classPathEntry location="C:\Users\Tony\Desktop\dev\maven-repository\mysql\mysql-connector-java\5.1.47\mysql-connector-java-5.1.47.jar" />

    <!-- 一个数据库一个context -->
    <!--defaultModelType="flat" 大数据字段，不分表 -->
    <context id="MysqlTables" targetRuntime="MyBatis3" defaultModelType="flat">
        <property name="autoDelimitKeywords" value="true"/>
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>
        <property name="javaFileEncoding" value="utf-8"/>
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>

        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>

        <!-- 注释 -->
        <commentGenerator>
            <property name="suppressAllComments" value="true"/><!-- 是否取消注释 -->
            <property name="suppressDate" value="true"/> <!-- 是否生成注释代时间戳-->
        </commentGenerator>

        <!-- jdbc连接 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver" connectionURL="jdbc:mysql://localhost:3306/elite_tour_dev" userId="root"
                        password="root"/>
        <!-- 类型转换 -->
        <javaTypeResolver>
            <!-- 是否使用bigDecimal， false可自动转化以下类型（Long, Integer, Short, etc.） -->
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- 生成实体类地址 -->
        <javaModelGenerator targetPackage="com.zoomride.entity" targetProject="src/main/java">
            <property name="enableSubPackages" value="false"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>
        <!-- 生成mapxml文件 -->
        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources">
            <property name="enableSubPackages" value="false"/>
        </sqlMapGenerator>
        <!-- 生成mapxml对应client，也就是接口dao -->
        <javaClientGenerator targetPackage="com.zoomride.mapper" targetProject="src/main/java" type="XMLMAPPER">
            <property name="enableSubPackages" value="false"/>
        </javaClientGenerator>


        <table tableName="admin" domainObjectName="Admin"
               enableCountByExample="false"
               enableUpdateByExample="false"
               enableDeleteByExample="false"
               enableSelectByExample="false"
               selectByExampleQueryId="true">
            <columnOverride column="username" javaType="java.lang.String"/>
            <columnOverride column="password" javaType="java.lang.String"/>
            <columnOverride column="first_name" javaType="java.lang.String"/>
            <columnOverride column="email" javaType="java.lang.String"/>
            <columnOverride column="status" javaType="java.lang.String"/>
            <columnOverride column="sex" javaType="java.lang.String"/>
        </table>

        <table tableName="include_item" domainObjectName="IncludeItem"
               enableCountByExample="false"
               enableUpdateByExample="false"
               enableDeleteByExample="false"
               enableSelectByExample="false"
               selectByExampleQueryId="true">
            <columnOverride column="content" javaType="java.lang.String"/>
            <columnOverride column="item_id" javaType="java.lang.String"/>
        </table>

        <table tableName="tour" domainObjectName="Tour"
               enableCountByExample="false"
               enableUpdateByExample="false"
               enableDeleteByExample="false"
               enableSelectByExample="false"
               selectByExampleQueryId="true">
            <columnOverride column="name" javaType="java.lang.String"/>
            <columnOverride column="description" javaType="java.lang.String"/>
            <columnOverride column="details" javaType="java.lang.String"/>
            <columnOverride column="duration" javaType="java.lang.String"/>
            <columnOverride column="max_duration" javaType="java.lang.String"/>
            <columnOverride column="country" javaType="java.lang.String"/>
            <columnOverride column="country_area" javaType="java.lang.String"/>
            <columnOverride column="details_link" javaType="java.lang.String"/>
            <columnOverride column="status" javaType="java.lang.String"/>
            <columnOverride column="c_price" javaType="java.lang.String"/>
            <columnOverride column="p_price" javaType="java.lang.String"/>
            <columnOverride column="type" javaType="java.lang.String"/>
            <columnOverride column="has_accessibility" javaType="java.lang.String"/>
            <columnOverride column="is_allowed_pet" javaType="java.lang.String"/>
            <columnOverride column="has_audio_guide" javaType="java.lang.String"/>
            <columnOverride column="include_description" javaType="java.lang.String"/>
            <columnOverride column="has_tour_guide" javaType="java.lang.String"/>
        </table>

        <table tableName="review" domainObjectName="Review"
               enableCountByExample="false"
               enableUpdateByExample="false"
               enableDeleteByExample="false"
               enableSelectByExample="false"
               selectByExampleQueryId="true">
            <columnOverride column="username" javaType="java.lang.String"/>
            <columnOverride column="description" javaType="java.lang.String"/>
            <columnOverride column="date" javaType="java.lang.String"/>
            <columnOverride column="item_id" javaType="java.util.Date"/>
        </table>


    </context>

</generatorConfiguration>
